<% comments.each do |comment| %>
  <table class="table table-borderless">
    <tbody>
      <tr class="row d-flex align-items-center">
        <td class="col-7 col-md-7 col-lg-9"><%= comment.comment %></td>
        <td class="col-3 col-md-3 col-lg-2 text-muted"><%= comment.name %></td>
        <td class="col-2 col-md-2 col-lg-1">
          <%= link_to "削除",list_comment_path(comment.list, comment),"data-confirm"=>"本当に消しますか？", method: :delete,class: "btn btn-danger" %>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>