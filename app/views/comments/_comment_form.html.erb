<%= form_with model: comment, url: comments_path(list), method: :post, local: false do |f| %>
  <div class="form-group">
    <%= f.text_area :comment, rows: "2", placeholder: "コメントはこちら" ,class: "form-control"%>
    <%= f.text_field :name %>
  </div>
  <div class="form-group text-right">
    <%= button_tag type: 'submit',class: "btn btn-sm btn-blue" do%>
      送信
    <% end %>
  </div>
<%end%>