<div class="design-container">
 <div class="container">
  <div class="card-list-container py-3">
   <div class="row">
     <% @lists.each do |list| %>
      <div class="col-sm-9 offset-sm-2 col-md-6 offset-md-0 col-lg-4 offset-lg-0">
       <div class="card-link my-3">
        <div class="card list-box my-3 mx-2">
         <%= link_to list_path(list.id) do %>
          <%= image_tag list.get_list_image(1000,1000),class: "card-img" %>
          <div class="card-body">
            <span class="text-muted small"><%= list.created_at.strftime('%Y/%m/%d') %></span>
            <h5 class="card-title"><%= list.title %></h5>
            <p class="card-text"><%= list.body %></p>
          </div>
         <% end %>
        </div>
       </div>
      </div>
     <%end%>
    </div>
   </div>
 </div>
</div>
