<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 col-lg-8 mx-auto">
      <h3 class="new-post text-center mt-5">投稿編集</h3>
        <%= render "layouts/error", obj: @list %>
        <div class="new-post">
          <%= form_with model: @list, url: list_path,method: :patch, local: true do |f| %>
           <div class="form-group">
            <%= f.label:タイトル %>
            <%= f.text_field :title, class: "new-form form-control" %>
           </div>
           <div class="form-group">
            <%= f.label:本文 %>
            <%= f.text_area :body, class: "new-form form-control" %>
           </div>
           <div class="form-group">
            <%= f.label:画像 %><br>
            <%= f.file_field :list_image,accept: "image/*" %>
           </div>
           <div class="form-group text-center my-5">
            <%= f.submit "更新", class: "btn btn-blue" %>
           </div>
          <% end %>
        </div>
    </div>
  </div>
</div>
